
@require "hostlib.styl"

/*------------------------------*\
  #COMMON
\*------------------------------*/

body, html, img, address, table, tr, td, th, div, p, ul, li,
h1, h2, h3, h4, h5, h6
  margin 0
  border 0 none
  padding 0

body, html
  width 100%
  height 100%
  
// body
//   color text_color
//   background-color #fff
//   font-family "Roboto", "Open Sans", "lucida grande", "Segoe UI", arial, verdana, "lucida sans unicode", tahoma, sans-serif

// IE fix for SVG images
@media screen and (-ms-high-contrast: active), (-ms-high-contrast: none)
  img[src$=".svg"]
    width 100%

 
/*------------------------------*\
  #HEADER
\*------------------------------*/

$header_height = 58px

.main-header
  height $header_height
  background-color #eee
  border-bottom 1px solid #bbb
  padding 0 180px
  font-weight bold
  font-family sans-serif,Arial,Tahoma,Verdana
  text-transform uppercase

.header-title
  color lighten(#cc0000, 10%)
  font-size 50px

.phone-link
  padding 0 24px
  font-size 40px
  font-weight bold
  color #333
  text-decoration none

/* -------- Logo -------- */
.logo
  z-index 1
  position absolute
  top  0
  left 4px

  width  image_width(path_pub + image_argon_logo)
  height argon_logo_height

  background-image: url(image_argon_logo)
  background-repeat no-repeat
  background-size contain
  cursor pointer

/* -------- Price tag -------- */
.price-tag
  z-index 1
  position fixed
  top   0
  right 0
  &:hover
    cursor pointer

$new_pricetag_h = 100px
.price-tag__svg
  height 72px
  margin-top -2px
  @media screen and (min-width: lg_grid_width)
    height $new_pricetag_h


/*------------------------------*\
  #MAIN-PICS
\*------------------------------*/

.main-gallery
  position absolute
  top    $header_height+1
  left   0
  right  0
  bottom 0

.title-box
  height 100%
  min-height 120px

.gallery-title
  color #cc0000
  text-shadow 0 0 6px #eee, 0 0 8px #eee, 0 0 10px #eee, 0 0 12px #eee, 0 0 16px #eee
  font-size 48px
  font-weight bold
  font-family sans-serif,Arial,Tahoma,Verdana
  text-transform uppercase

.main-pic
  background-size cover
  background-repeat no-repeat
  background-position center center

.main-pic--tl
  background-image url(/images/main-pic-alu.jpg)

.main-pic--tr
  background-image url(/images/main-pic-chugun.jpg)

.main-pic--bl
  background-image url(/images/main-pic-ss.jpg)

.main-pic--br
  background-image url(/images/main-pic-copper2.jpg)

  
/*------------------------------*\
  #BANNER
\*------------------------------*/

.banner
  z-index 1
  position absolute
  top $header_height
  left 0
  bottom 0
  right 0
  $banner_image = '/images/banner-welcome.png'
  background-image url($banner_image)
  background-repeat no-repeat
  background-position center center


// 480px
@media screen and (min-width: sm_grid_width)
  .find-us
    top 0
    bottom auto
    left  argon_logo_width + 10px
    right pricetag_width + 10px
    width auto
    height header_height
    background none

  .addr-text
    font-size 18px

  .cell-locate-icon
    width 24px

  .phone-box
    padding-left 4px
    font-size 21px

// 600px
// @media screen and (max-width: md_grid_width)
//   .main-pic
//     background-size 500px

// 720px
@media screen and (min-width: lg_grid_width)
  .phone-box
    font-size 28px

// 800px
@media screen and (min-width: 800px)
  .find-us
    right pricetag_width  + 60px
    left argon_logo_width + 40px

// 960px
@media screen and (min-width: 960px)
  .phone-box
    font-size 33px

  /*---- Also fix price tag ----*/

  .price-tag
    top 1%
    right 1%

