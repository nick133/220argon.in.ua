
@require "../hostlib"

/*------------------------------*\
  #RELATED
\*------------------------------*/

.com-related
  width 100%

  .related-title
    padding 10px 0 12px 0
    font-size 26px
    font-weight 500
    line-height @font-size
    text-transform uppercase

  .related__item
    padding 6px 0

  .related__item-is
    margin 0 4px
    height 100%
    background-color color_grey
    border 1px solid darken(color_grey, 5%)
    border-radius 5px

  .related__item-title
    color #000
    height 50px
    font-size 16px
    font-weight 400
    text-transform uppercase

  .related__item-thumb
    background-color color_grey
    padding-top 6px

  .related__item-thumb-is
    padding 0 0 4px 0
    width 90%

  @media screen and (min-width: lg_grid_width)
    .related-title
      padding 32px 0 24px 0
      font-size 32px

  @media screen and (min-width: hd_grid_width)
    .related-title
      padding 40px 0 24px 0
      font-size 36px

