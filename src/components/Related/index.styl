
@require "../../hostlib"

/*------------------------------*\
  #RELATED
\*------------------------------*/

.related
  width 100%

.title
  padding 10px 0 12px
  font-size 26px
  font-weight 500
  line-height @font-size
  text-transform uppercase
  text-align center

.item
  padding 6px 0

.itemIS
  margin 0 4px
  height 100%
  background-color color_grey
  border 1px solid darken(color_grey, 5%)
  border-radius 5px

.itemTitle
  color #000
  height 50px
  font-size 16px
  font-weight 400
  text-transform uppercase

.itemThumb
  background-color color_grey
  padding-top 6px

.itemThumbIS
  padding 0 0 4px
  width 90%

@media screen and (min-width: lg_grid_width)
  .title
    padding 32px 0 24px
    font-size 32px

@media screen and (min-width: hd_grid_width)
  .title
    padding 40px 0 24px
    font-size 36px

